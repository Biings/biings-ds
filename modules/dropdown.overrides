/*******************************
       Dropdown Overrides
*******************************/

.ui.dropdown.inline .menu
{
	border: none;
}
.ui.dropdown .icon {
	color: rgba(0,0,0,0.5);
}
.ui.dropdown .icon:after
{
	content: 'â–¾';
	font-size: 1.15em;
	font-style: normal;
}

/* Disabled */
.ui.dropdown .menu > .item.item--disabled {
  cursor: default;
  color: #aaa;
}

.item.item--disabled:not(.item--semidisabled) > .icon {
	display: none;
}

.ui.dropdown.multiple .sizer {
    display: none;
}